@model DiplomaProject.ViewModels.LoginViewModel

<div class="d-flex align-items-center justify-content-center welcome-padding">
    
    <h2 class="text-center secondary-color">Вхід на сайт</h2>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="pl-5">

        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="form-label" asp-for="Email">Введіть Email</label>
            <input class="form-control" type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Password">Введіть пароль</label>
            <input class="form-control" type="password" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Увійти
            </button>
            
            OR
            
            <a id="sign-in-btn" class="btn btn-success" asp-action="Register" asp-controller="Account">Зареєструватися</a>
        </div>
    </form>
</div>
