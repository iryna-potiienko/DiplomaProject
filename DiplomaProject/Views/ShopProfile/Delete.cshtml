@model DiplomaProject.Models.ShopProfile

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center secondary-color pt-2">Видалення</h1>

<h3  class="text-center primary-color">Ви впевнені що хочете видалити магазин?</h3>
<div>
    <hr />
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogoPhoto)
        </dt>
        <dd class = "col-sm-10">
            <div class = "col-sm-6">
                @* @Html.DisplayFor(model => model.LogoPhoto) *@
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.LogoPhoto)" alt="LogoPhoto" style="width: inherit;"/>
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsVerified)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsVerified)
            {
                <i class="fa-solid fa-check text-success fa-2x"></i>
            }
            else
            {
                <i class="fa-solid fa-xmark text-danger fa-2x"></i>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contacts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contacts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salesman)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salesman.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до магазинів</a>
    </form>
</div>
