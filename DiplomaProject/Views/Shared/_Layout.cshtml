<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DiplomaProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body class="bg-main">

<header class="navbar navbar-expand navbar-dark d-flex flex-md-row bd-navbar bg-header primary-color">
    <a class="navbar-brand mr-0 mr-md-2" asp-area="" asp-controller="Home" asp-action="Index">DiplomaProject</a>

    <ul class="navbar-nav bd-navbar-nav flex-row">
        <li class="nav-item">
            <a class="nav-link primary-color hover" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link primary-color hover" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>

        <li class="nav-item">
            <a class="nav-link primary-color hover" asp-area="" asp-controller="ShopProfile" asp-action="Index">Shops</a>
        </li>
        <li class="nav-item">
            <a class="nav-link primary-color hover" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
        </li>
    </ul>

    <div class="navbar-nav flex-row">
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="nav-link primary-color hover" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            <a class="nav-link primary-color hover" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        }
        <div>
            <a class="nav-link primary-color hover " asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
    </div>
    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <p>@User.Identity.Name</p>

            @Html.ActionLink("Мій кошик", "Index", "ProductInOrder")
            @Html.ActionLink("Мої замовлення", "Index", "Order")
            @await Component.InvokeAsync("MyShop", new {currentUserEmail = User.Identity.Name})
        }
    </div>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - DiplomaProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>