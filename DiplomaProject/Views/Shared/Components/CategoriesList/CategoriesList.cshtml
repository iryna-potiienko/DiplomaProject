@model IEnumerable<DiplomaProject.Models.Category>

<div class="welcome-padding">
    <h4>Доступні категорії товарів</h4>

    <div class="list-group list-group-horizontal-md">
        @foreach (var item in Model)
        {
            <a asp-action="Index" asp-controller="Product" asp-route-categoryId="@item.Id" class="list-group-item list-group-item-action main-background-color">@item.Name</a>
        }
    </div>
</div>