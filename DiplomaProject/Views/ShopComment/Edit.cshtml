@model DiplomaProject.ViewModels.ShopCommentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 text-center secondary-color pt-2>Редагувати</h1>

<h4>Коментар до магазину</h4>

<hr/>
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            @* <input type="hidden" asp-for="ShopProfileId" asp-items="ViewBag.ShopProfileId" /> *@

            <div class="form-group">
                <label asp-for="CommentText" class="control-label"></label>
                <textarea asp-for="CommentText" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estimation" class="control-label"></label>
                <input asp-for="Estimation" class="form-control"/>
                <span asp-validation-for="Estimation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    @* <a asp-action="Index">Back to List</a> *@
    @Html.ActionLink("Повернутися до магазину", "Details", "ShopProfile", new { id = ViewBag.ShopProfileId }, null)
</div>