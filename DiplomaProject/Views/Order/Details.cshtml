@model DiplomaProject.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі замовлення</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cart.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cart.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShopProfile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShopProfile.Name)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateBeReady)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.DateBeReady)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfFixation)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.DateOfFixation)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressToDelivery)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.AddressToDelivery)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDelivered)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.IsDelivered)
        </dd>
    </dl>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart.ProductsInOrder[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart.ProductsInOrder[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart.ProductsInOrder[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart.ProductsInOrder[0].FinalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart.ProductsInOrder[0].FinalDescription)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Cart.ProductsInOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalDescription)
                </td>
            </tr>
        }
        </tbody>
    </table>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-4">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPaid)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.IsPaid)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserComment)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.UserComment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesmanComment)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.SalesmanComment)
        </dd>
        
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadyStage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadyStage.Name)
        </dd>
    </dl>

</div>

<div>
    @{
        if (Model.Cart.Customer.Email == User.Identity.Name)
        {
            switch (Model.ReadyStageId)
            {
                case 1:
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 2:
                    <a asp-action="UserGetResponse" asp-route-id="@Model?.Id">Узгодити деталі замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="AcceptOrder" asp-route-id="@Model?.Id">Підтвердити замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 3:
                    <a asp-action="ReadyStageChanged" asp-route-option="PayForTheOrder" asp-route-id="@Model?.Id">Оплатити</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 4:
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 5:
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 6:
                    if (Model.DeliveryTypeId == 2)
                    {
                        <a asp-action="ReadyStageChanged" asp-route-option="GetOrder" asp-route-id="@Model?.Id">Замовлення отримано</a>
                    }
                    else if (Model.DeliveryTypeId == 1)
                    {
                        <a asp-action="ReadyStageChanged" asp-route-option="GetOrder" asp-route-id="@Model?.Id">Забрати замовлення</a>
                    }
                    break;
                case 7:
                    <a asp-action="ReadyStageChanged" asp-route-option="GetOrder" asp-route-id="@Model?.Id">Замовлення отримано</a>
                    break;
                case 8:
                    break;
                case 9:
                    <a asp-action="Create" asp-controller="OrderFeedback" asp-route-orderId="@Model?.Id" asp-route-customerId="@Model.Cart.CustomerId">Залишити відгук</a>
                    <a asp-action="Details" asp-controller="OrderFeedback" asp-route-orderId="@Model?.Id">Переглянути відгук</a>
                    break;
            }
            <a asp-action="Index" asp-controller="Order">Повернутися до замовлень</a>
        }
        else if (Model.ShopProfile.Salesman.Email == User.Identity.Name)
        {
            switch (Model.ReadyStageId)
            {
                case 1:
                    <a asp-action="ShopGetsOrderFromUser" asp-route-id="@Model?.Id">Узгодити деталі замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="AcceptOrder" asp-route-id="@Model?.Id">Підтвердити замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 2:
                    <a asp-action="UserGetResponse" asp-route-id="@Model?.Id">Узгодити деталі замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="AcceptOrder" asp-route-id="@Model?.Id">Підтвердити замовлення</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 3:
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 4:
                    <a asp-action="ReadyStageChanged" asp-route-option="PutOrderInWork"  asp-route-id="@Model?.Id">Відправити замовлення в роботу</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder"  asp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 5:
                    <a asp-action="ReadyStageChanged" asp-route-option="OrderIsReady" asp-route-id="@Model?.Id">Замовлення готове</a>
                    <a asp-action="ReadyStageChanged" asp-route-option="CancelOrder" sp-route-id="@Model?.Id">Скасувати замовлення</a>
                    break;
                case 6:
                    if (Model.DeliveryTypeId == 2)
                    {
                        <a asp-action="ReadyStageChanged" asp-route-option="SendOrderToUser" asp-route-id="@Model?.Id">Надіслати замовлення</a>
                    }
                    break;
                case 7:
                    break;
                case 8:
                    break;
                case 9:
                    <a asp-action="Details" asp-controller="OrderFeedback" asp-route-orderId="@Model?.Id">Переглянути відгук</a>
                    break;
            }
            <a asp-action="Index" asp-controller="Order" asp-route-shopProfileId="@Model?.ShopProfileId">Повернутися до замовлень</a>
        }
        
    }
    
</div>